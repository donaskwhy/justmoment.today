<h1><%= @post.id %>번 Post글 입니다.</h1>

<div>
    <div>제목 : <%= @post.title %></div>
    <div>내용 : <%= @post.content %></div>
    <p>
        <img src="<%= @post.image_url %>">
    </p>
</div>

<!-- 댓글 -->
<div class="comment">
    <!-- 댓글 입력 -->
    <% if user_signed_in? %>
    <form action="/posts/<%=@post.id%>/comments/create">
        <input type="textarea" name="comment_body" placeholder="댓글을 입력하세요.">
        <input type="submit" value="등록">
    </form>
    <% end %>
    <!-- 댓글 출력 -->
    <% @post.comments.each do |comment| %>
        <div class="body">
            <%= comment.body %>
        </div>

        <% if current_user.id == comment.user_id %>
                <a href="/posts/<%=@post.id%>/comments/destroy/<%=comment.id%>">삭제</a>
        <% end %>
        <hr>
    <% end %> <!--  comment each do-->
</div> <!-- div-comment -->

<div>
    <a href = "/">홈으로</a>
    <a href = "/posts/destroy/<%= @post.id %>" data-confirm="진짜로 삭제하시겠습니까??" data-method="post">삭제하기</a>
</div>